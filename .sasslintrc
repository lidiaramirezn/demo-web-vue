{
  "options": {
    "merge-default-rules": false,
    "formatter": "html",
    "output-file": "linters/sass-lint.html",
    "max-warnings": 50
  },
  "files": {
    "include": "src/**/*.s+(a|c)ss",
    "ignore": [
      ""
    ]
  },
  "rules": {
    "bem-depth": 4,
    "declarations-before-nesting": true,
    "nesting-depth" : [
      4,
      { "max-depth" : 4 }
    ],
    "extends-before-declarations": 2,
    "extends-before-mixins": 2, 
    "force-pseudo-nesting": true,
    "space-after-bang": true,
    "space-after-colon": true,
    "space-before-brace" : true,
    "max-file-line-count": 200,
    "no-warn": 1,
    "no-debug": 1,
    "no-ids": 2,
    "no-important": 2,
    "hex-notation": [
      2,
      {
        "style": "uppercase"
      }
    ],
    "indentation": [
      2,
      {
        "size": 2
      }
    ]
  }
}